<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
  >

    <LinearLayout
        android:background="@drawable/bgimg"
        android:layout_width="match_parent"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/img_profile"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/arrowback"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp">

            </ImageView>
            <TextView
                android:id="@+id/edit_profile_back"
                android:textSize="@dimen/_14sdp"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Edit profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

            </TextView>

        </RelativeLayout>

        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/user_profile"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/defultuser"
                    app:civ_border_width="4dp"
                    app:civ_shadow_radius="@dimen/_8sdp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/img_take_pic"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="-30dp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardCornerRadius="75dp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/camera"
                        android:padding="@dimen/_20sdp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>



            <TextView
                android:id="@+id/txt_user_name"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="6.5"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Name"
                        android:textSize="@dimen/_13sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <EditText
                        android:editable="false"
                        android:id="@+id/edt_user_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:text=" "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Last Name"
                        android:textSize="@dimen/_13sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <EditText
                        android:id="@+id/edt_user_last_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </EditText>
                </LinearLayout>
            </LinearLayout>




            <TextView
                android:text="Email"
                android:textSize="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <EditText
                android:id="@+id/edt_Email"
                android:editable="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:text="Phone Number"
                android:textSize="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <EditText

                android:id="@+id/edt_phone_number"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>


            <TextView
                android:id="@+id/txt_update_profile"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/cornerlogin"
                android:layout_width="@dimen/_120sdp"
                android:padding="@dimen/_7sdp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Upload"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>