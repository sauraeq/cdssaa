<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PrivacyActivity">
    <RelativeLayout
        android:background="@color/com_facebook_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/tv_orderhistory"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/arrowback"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp">

        </ImageView>

        <TextView
            android:textSize="@dimen/_14sdp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Order Deatils"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"></TextView>
    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:background="@drawable/whitecorner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="Order date"/>
                       <TextView
                           android:id="@+id/text_order_date"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="14-Sep-2021"/>
                   </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Order #"/>
                        <TextView
                            android:id="@+id/text_order"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="202100000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Order total"/>
                        <TextView
                            android:id="@+id/text_order_total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="214"/>
                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:text="Shipment Deatils"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/whitecorner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
                      <ImageView
                          android:id="@+id/img_product"
                          android:layout_width="@dimen/_50sdp"
                          android:layout_height="@dimen/_50sdp"
                          android:src="@drawable/logo"/>
                      <LinearLayout
                          android:layout_marginStart="@dimen/_5sdp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                          <TextView
                              android:id="@+id/txt_Describtion"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="JaipurCraft Treee Holder"
                              android:textColor="@color/black"
                              android:textSize="@dimen/_13sdp"/>
                          <TextView
                              android:id="@+id/txt_quanity"
                              android:layout_width="match_parent"
                              android:textSize="@dimen/_11sdp"
                              android:layout_height="wrap_content"
                              android:text="Qty: 1"
                              />
                          <TextView
                              android:id="@+id/txt_price"
                              android:layout_width="match_parent"
                              android:textSize="@dimen/_11sdp"
                              android:layout_height="wrap_content"
                              android:text="Price : 123"
                              />
                      </LinearLayout>
                  </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:text="Order details"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/whitecorner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Method"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"/>
                        <TextView
                            android:layout_marginTop="@dimen/_3sdp"
                            android:id="@+id/txt_paymentmethiod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COD"
                            android:textSize="@dimen/_12sdp"/>
                        <View
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/black"/>
                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Method"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"/>
                        <TextView
                            android:layout_marginTop="@dimen/_3sdp"
                            android:id="@+id/txt_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="c-60 Sector 61 , Noida"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>





</LinearLayout>