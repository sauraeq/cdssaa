<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/_15sdp"
    android:layout_width="match_parent"
    android:background="#f2f1ef"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/user_profile"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:src="@drawable/girl"
        app:civ_border_width="4dp"
        app:civ_shadow_radius="@dimen/_8sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/descrion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop Coffee Roasted"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/location"/>
            <TextView
            android:id="@+id/list_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Barsha Dubai"
            android:textSize="@dimen/_9sdp"

            android:textColor="@color/black"
            />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/distance"/>
            <TextView
                android:id="@+id/distenace"
                android:layout_toEndOf="@+id/image"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance:2 Km"
                android:textSize="@dimen/_9sdp"

                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_toRightOf="@+id/image" />
            <TextView
                android:id="@+id/selectid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:text="Select"
                android:background="@drawable/colorfill"
                android:layout_alignParentRight="true" />
        </RelativeLayout>









    </LinearLayout>



</LinearLayout>